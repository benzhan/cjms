$(function() {
    var $treeTable = $('table').treeTable({expandLevel:3});
    $('#addChilds').click(function() {
        var html = '<tr id="7" pId="4"><td>4.2</td><td>内容</td></tr><tr id="8" pId="4" hasChild="true"><td>4.3</td><td>内容</td></tr>';
        $treeTable.addChilds(html);
    });
});
</script>
